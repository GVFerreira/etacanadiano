<script>
    //Exit intent
    let mouseout = 1
    function showExitModal() {
        $('#exitModal').modal('show')
    }

    document.addEventListener('mouseout', (e) => {
        if (e.relatedTarget === null) {
            if (mouseout) {
                showExitModal()
                mouseout--
            }
        }
    })


    //Atualizar valor em tela
