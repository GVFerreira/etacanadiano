        $('.totalAmount1').text('€49,00')
        const total = parseInt("{{qtyVisas}}") * 49
        $('#totalAmount2').text(`${total.toLocaleString('pt-PT', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`)
    })
</script>