<style>
    .red {
        color: red;
    }
    header #nav {
        display: none !important;
    }
</style>
<main class="my-5" style="flex: 1 1 0">
    <section>
        <div class="container">
            {{#each errors}}
                <div class="alert alert-danger">{{text}}</div>
            {{/each}}
            <div class="card">
                <div class="card-header">
                    <h1>Cadastro de Usuário</h1>
                </div>
                <div class="card-body">
                    <form action="/admin/registering-user" method="POST">
                        <label for="name">Nome: <span class="red">*</span></label>
                        <input type="text" name="name" id="name" placeholder="Digite seu nome completo" class="form-control mb-4" required autofocus>

                        <label for="email">E-mail: <span class="red">*</span></label>
                        <input type="email" name="email" id="email" placeholder="Ex: janedoe@email.com" class="form-control mb-4" required>

                        <label for="password">Senha: <span class="red">*</span></label>
                        <input type="password" name="password" id="password" placeholder="No minímo 4 caracteres" class="form-control mb-4" required>

                        <label for="password2">Confirme a senha: <span class="red">*</span></label>
                        <input type="password" name="password2" id="password2" placeholder="Digite sua senha novamente" class="form-control mb-4" required>

                        <input type="submit" value="Cadastrar" class="btn btn-primary">
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>
<script>
    document.getElementById('link-logo-home').href = '/admin'
    
    var elementoPai = document.getElementById("header-container")
    var novoElementoFilho = document.createElement("div")
    novoElementoFilho.innerHTML = `
        <a href="/admin/register-user" class="mx-4" style="color: white">Registrar usuário</a>
        <a href="/admin/consult-users" class="mx-4" style="color: white">Consultar usuários</a>
        <a href="/admin/consult-payments" class="mx-4" style="color: white">Consultar pagamentos</a>
        <a href="/users/logout" class="ms-4 btn btn-danger text-upperccase fw-bold">Sair</a>
    `
    elementoPai.appendChild(novoElementoFilho)
</script>
